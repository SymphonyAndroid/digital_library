<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/search_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/search_book"
        style="@style/Theme.DigitalLibrary.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_taken_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/search_taken_book"
        style="@style/Theme.DigitalLibrary.Button"
        app:layout_constraintEnd_toEndOf="@+id/search_book"
        app:layout_constraintStart_toStartOf="@+id/search_book"
        app:layout_constraintTop_toBottomOf="@+id/search_book" />

</androidx.constraintlayout.widget.ConstraintLayout>